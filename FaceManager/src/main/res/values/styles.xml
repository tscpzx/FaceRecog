<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="log_reg_editStyle">
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:drawablePadding">@dimen/edit_draw_p</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/edit_draw_p</item>
        <item name="android:textCursorDrawable">@drawable/edit_txt_cursor</item>
        <item name="android:textSize">@dimen/normal_txt</item>
    </style>

    <style name="linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">2px</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="txt_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/colorLightBlack</item>
        <item name="android:textSize">@dimen/normal_txt</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fifty_h</item>
        <item name="android:layout_marginTop">@dimen/edit_btn_m_t</item>
        <item name="android:background">@drawable/log_btn_shape</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/normal_txt</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!-- dialog的动画 -->
    <style name="main_menu_animStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>
    <!--checkbox选中状态-->
    <style name="cb_style">
        <!--波纹的颜色-->
        <item name="android:colorControlHighlight" tools:ignore="NewApi">@color/colorLightRed</item>
        <!--选中的颜色-->
        <item name="colorAccent">@color/colorRed</item>
    </style>
</resources>
