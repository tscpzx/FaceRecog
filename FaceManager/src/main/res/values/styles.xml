<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="log_reg_editStyle">
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:drawablePadding">@dimen/edit_draw_p</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/edit_draw_p</item>
        <item name="android:textCursorDrawable">@drawable/edit_txt_cursor</item>
        <item name="android:textSize">@dimen/normal_txt</item>
    </style>

    <style name="linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">2dip</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="txt_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/colorLightBlack</item>
        <item name="android:textSize">@dimen/normal_txt</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fifty_h</item>
        <item name="android:layout_marginTop">@dimen/edit_btn_m_t</item>
        <item name="android:background">@drawable/log_btn_shape</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/normal_txt</item>
    </style>
</resources>
