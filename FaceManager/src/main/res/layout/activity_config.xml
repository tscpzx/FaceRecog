<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ConfigActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_title" />
        <!--网络设备-->
        <LinearLayout style="@style/linear_layout">

            <TextView
                style="@style/txt_layout"
                android:text="网卡设备" />

            <Spinner
                android:id="@+id/equipment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="4"
                android:dropDownVerticalOffset="20dp" />
        </LinearLayout>
        <!--连接类型-->
        <LinearLayout style="@style/linear_layout">

            <TextView
                style="@style/txt_layout"
                android:text="连接类型" />

            <RadioGroup
                android:id="@+id/ip_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/dynamic_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="动态IP" />

                <RadioButton
                    android:id="@+id/static_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:checked="false"
                    android:text="静态IP" />
            </RadioGroup>
        </LinearLayout>
        <!--ip地址-->
        <LinearLayout style="@style/linear_layout">

            <TextView
                style="@style/txt_layout"
                android:text="ip地址" />

            <EditText
                android:id="@+id/ip_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="4"
                android:background="@drawable/infor_input_edit"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="@dimen/normal_txt" />
        </LinearLayout>
        <!--子网掩码-->
        <LinearLayout style="@style/linear_layout">

            <TextView
                style="@style/txt_layout"
                android:text="子网掩码" />

            <EditText
                android:id="@+id/subnet_mask"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="4"
                android:background="@drawable/infor_input_edit"
                android:singleLine="true"
                android:textSize="@dimen/normal_txt" />
        </LinearLayout>
        <!--DNS地址-->
        <LinearLayout style="@style/linear_layout">

            <TextView
                style="@style/txt_layout"
                android:text="DNS地址" />

            <EditText
                android:id="@+id/dns_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="4"
                android:background="@drawable/infor_input_edit"
                android:singleLine="true"
                android:textSize="@dimen/normal_txt" />
        </LinearLayout>
        <!--网关地址-->
        <LinearLayout style="@style/linear_layout">

            <TextView
                style="@style/txt_layout"
                android:text="网关地址" />

            <EditText
                android:id="@+id/net_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="4"
                android:background="@drawable/infor_input_edit"
                android:singleLine="true"
                android:textSize="@dimen/normal_txt" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/config"
        style="@style/btn"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:text="确定"
       />

    <ImageView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</RelativeLayout>